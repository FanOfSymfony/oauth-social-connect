<?xml version="1.0" ?>

<container xmlns="http://symfony.com/schema/dic/services"
           xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
           xsi:schemaLocation="http://symfony.com/schema/dic/services http://symfony.com/schema/dic/services/services-1.0.xsd">

    <parameters>
        <parameter key="fos_oauth_social_connect.templating.helper.oauth.class">FOS\Bundle\OAuthSocialConnectBundle\Templating\Helper\OAuthHelper</parameter>
    </parameters>

    <services>
        <service id="fos_oauth_social_connect.templating.helper.oauth" class="%fos_oauth_social_connect.templating.helper.oauth.class%">
            <argument type="service" id="fos_oauth_social_connect.security.oauth_utils" />
            <argument type="service" id="request_stack" />
            <tag name="templating.helper" alias="oauth" />
        </service>
    </services>
</container>
