{% extends '@HWIOAuth/layout.html.twig' %}

{% block fos_oauth_social_connect_content %}
    <h3>{{ 'header.register' | trans({'%name%': userInformation.realName}, 'HWIOAuthBundle') }}</h3>
    <div class="row">
        <div class="span6">
            {{ form_start(form, {'action': path('fos_oauth_social_connect_connect_registration', {'key': key}), 'attr': {'class': 'fos_oauth_social_connect_registration_register'}}) }}
                {{ form_widget(form) }}
                <div>
                    <button type="submit" class="btn btn-primary">{{ 'connect.registration.submit'|trans({}, 'HWIOAuthBundle') }}</button>
                    <a href="{{ path('fos_oauth_social_connect_connect') }}" class="btn">{{ 'connect.registration.cancel' | trans({}, 'HWIOAuthBundle') }}</a>
                </div>
            {{ form_end(form) }}
        </div>
        <div class="span6">
            {% if userInformation.profilePicture is not empty %}
                <img src="{{ userInformation.profilePicture }}" />
            {% endif %}
        </div>
    </div>

{% endblock fos_oauth_social_connect_content %}
